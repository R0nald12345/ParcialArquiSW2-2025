<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información del pedido -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información del Pedido"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2196F3"
            android:layout_marginBottom="12dp" />

        <!-- Cliente Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cliente *">

            <AutoCompleteTextView
                android:id="@+id/actvCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Repartidor Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repartidor *">

            <AutoCompleteTextView
                android:id="@+id/actvRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha *"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha del pedido"
            android:focusable="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

        <!-- Monto Total -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto Total *"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:focusable="false" />

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Sección de productos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Productos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp" />

        <!-- Producto Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Producto *">

            <AutoCompleteTextView
                android:id="@+id/actvProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:background="@drawable/edittext_background"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cantidad y Precio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad *"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="number"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio Unitario"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:focusable="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón Agregar -->
        <Button
            android:id="@+id/btnAgregarDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Agregar Producto al Pedido"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp" />

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Lista de productos agregados -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos en el Pedido"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF9800"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDetalles"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#F8F9FA"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ícono de la categoría -->
        <ImageView
            android:id="@+id/ivImagen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_category"
            app:tint="#5733FF" />
        <!-- lo puedes quitar si quieres el color original -->

        <!-- Info categoría -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de categoría"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción breve de la categoría (2-3 líneas como máximo)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_marginTop="4dp" />

            <!-- Acciones (Editar, Eliminar, Ver productos) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/btnEditar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:id="@+id/btnEliminar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_delete"
                    app:tint="#F44336"
                    android:layout_marginEnd="12dp" />

                <Button
                    android:id="@+id/btnVerProductos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver productos"
                    android:textColor="#5733FF"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:padding="4dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

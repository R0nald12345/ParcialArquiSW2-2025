<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parcialarqui">

    <!-- Permisos de red -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ParcialArqui"
        android:usesCleartextTraffic="true">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Categorías -->
        <activity
            android:name=".categoria.CategoriaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Productos -->
        <activity
            android:name=".producto.ProductosActivity"
            android:exported="false"
            android:parentActivityName=".categoria.CategoriaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".categoria.CategoriaActivity" />
        </activity>

        <!-- Métodos de Pago -->
        <activity
            android:name=".metodopago.MetodoPagoActivity"
            android:exported="false"
            android:parentActivityName=".categoria.CategoriaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".categoria.CategoriaActivity" />
        </activity>

        <activity
            android:name=".repartidor.RepartidorActivity"
            android:exported="false" />

        <activity
            android:name=".cliente.ClienteActivity"
            android:exported="false" />

        <activity
            android:name=".pedido.PedidoActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.parcialarqui.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
